<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_s">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_m"
        android:layout_marginEnd="@dimen/padding_m"
        app:cardCornerRadius="@dimen/message_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_max="300dp"
        tools:cardBackgroundColor="@color/sent_message_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_m">

            <TextView
                android:id="@+id/text_message_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_link"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="John Doe"
                android:paddingBottom="@dimen/padding_s"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_message_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_message_name"
                tools:text="This is my message"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/button_play_pause_audio"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginTop="4dp"
                android:contentDescription="@string/play_audio"
                android:src="@drawable/ic_play_circle_filled"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_message_body"
                app:tint="@color/text_secondary"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_audio_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_s"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/progress_audio"
                app:layout_constraintEnd_toEndOf="@+id/progress_audio"
                tools:text="0:45"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/progress_audio"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="4dp"
                android:layout_marginStart="8dp"
                android:max="100"
                android:progress="0"
                android:progressBackgroundTint="@color/text_secondary"
                android:progressTint="@color/circle_background_gradient_3"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/button_play_pause_audio"
                app:layout_constraintStart_toEndOf="@+id/button_play_pause_audio"
                app:layout_constraintTop_toBottomOf="@+id/text_audio_duration"
                app:layout_constraintTop_toTopOf="@id/button_play_pause_audio"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_audio_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="button_play_pause_audio,text_audio_duration,progress_audio"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progress_audio"
                app:layout_goneMarginTop="4dp"
                tools:text="12:30" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>