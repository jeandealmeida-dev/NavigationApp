<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:innerRadiusRatio="-2"
            android:shape="ring"
            android:thickness="1dp"
            android:useLevel="false">
            <gradient
                android:angle="180"
                android:centerColor="@color/circle_background_gradient_1"
                android:endColor="@color/circle_background_gradient_2"
                android:startColor="@color/circle_background_gradient_3"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <gradient
                android:angle="180"
                android:centerColor="@color/circle_background_gradient_2"
                android:endColor="@color/circle_background_gradient_1"
                android:startColor="@color/circle_background_gradient_3"
                android:type="linear" />
        </shape>
    </item>
</layer-list>